<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="151dp"
        android:background="@color/colorPrimary">

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent_viewresult"
                android:text="View Result"
                android:paddingLeft="25dp"
                android:textColor="@android:color/black"
                android:paddingTop="20dp"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/viewresultdrawable"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent_viewregstatus"
                android:text="View Registeration Status"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/viewstatus"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent_viewpaystatus"
                android:text="View Payment Status"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/viewresultdrawable"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent_contactlc"
                android:text="Contact Level Coordinator"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/contactlcdraw"
                android:drawablePadding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/parent_givefeedback"
                android:text="Feed Back"
                android:paddingLeft="25dp"
                android:paddingTop="20dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="18sp"
                android:drawableLeft="@mipmap/givefeedbackdraw"
                android:drawablePadding="10dp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>